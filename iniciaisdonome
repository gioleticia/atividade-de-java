package com.mycompany.iniciaisdonome;

/**
 *
 * @author aluno
 */
public class IniciaisDoNome {

    public static void main(String[] args) {
       System.out.println("entre com seu nome ou frase");
       String frase = "jack snicket";
       
      System.out.println("A inicias do seu nome: ");
    System.out.print(frase.charAt(0));
    
    for(int i=0; i<frase.length(); i++) {            
        if(frase.charAt(i) == ' ') {
            System.out.print(frase.charAt(i + 1));
        }                   
    }
    }
}
