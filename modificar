package com.mycompany.modificar;

/**
 *
 * @author aluno
 */
public class Modificar {

    public static void main(String[] args) {
        String frase = "bananas de pijama";
        String original = "a";
        String substituicao = "e";
        
       String Modificar = frase.replace(original, substituicao);
       
       System.out.println("frase original:"+ frase);
       System.out.println("frase modificada:"+ Modificar);
    }
}
